    "version": "0.2.0",
    // sudo lsof -i :9501 # 找出占用9501端口的进程
    "configurations": [
        { 
            "name": "sh_file_debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 9501
            },
            "justMyCode": true
        },
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}